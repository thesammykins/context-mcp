{
  "name": "@thesammykins/agent-progress-mcp",
  "version": "1.0.0",
  "description": "MCP server for tracking AI agent progress across projects",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "agent-progress-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "build:dev": "tsc",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "clean": "rm -rf build",
    "lint": "echo 'ESLint config not found - skipping linting'",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "release-please release"
  },
  "files": [
    "build/**/*.js",
    "build/**/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thesammykins/context-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/thesammykins/context-mcp/issues"
  },
  "homepage": "https://github.com/thesammykins/context-mcp#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "nanoid": "^5.0.0",
    "openai": "^4.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0",
    "eslint": "^9.0.0",
    "release-please": "^17.1.3",

  },
  "engines": {
    "node": ">=18.0.0"
  }
}
