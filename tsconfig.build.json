{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "stripInternal": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src/__tests__/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}